<div class="container">
  <div class="row justify-content-around">
    <div class="col-xs-12 col-sm-6">
      <div class="form-login">
        <h2>Entrar</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs label-rf ">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email",
                        placeholder: "desirre@lewagon.com",
                        "data-validate" => "email" }%>
            <%= f.input :password, label: 'Senha',
                        required: false,
                        input_html: { autocomplete: "current-password",
                        placeholder: "**********"} %>
            <%= f.input :remember_me, label: 'Lembrar de mim',as: :boolean if devise_mapping.rememberable? %>
          <div class="form-actions">
            <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
          </div>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
