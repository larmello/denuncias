<div class="container">
  <div class="row justify-content-around">
    <div class="col-xs-12 col-sm-9">
      <div class="form-login">
        <h2>Cadastro</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs label-rf ">
            <%= f.input :name, label: "Nome",
                        required: true,
                        autofocus: true,
                        input_html: { "data-validate" => "required" }
                        %>
            <%= f.input :email, label: "e-mail",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", "data-validate" => "email,required" }
                        %>
            <%= f.input :cpf, label: "CPF" ,
                        required: true,
                        autofocus: true,
                        input_html: { "data-validate" => "cpf,required" }
                        %>
            <%= f.input :phone, label: "Telefone",
                        required: false,
                        autofocus: true,
                        input_html: { "data-validate" => "telefone" }
                        %>
            <%= f.input :password, label: "Senha",
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation, label: "Confirme sua senha",
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Cadastrar", class:"btn btn-primary" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
